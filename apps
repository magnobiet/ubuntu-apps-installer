function rustupInstaller {

  if [ ! `which cmake` ]; then
    apt-get install cmake
  fi

  curl https://sh.rustup.rs -sSf | sh

  sh -c "echo 'source $HOME/.cargo/env' >> ~/.bashrc"

}

function gitJournalInstaller {

  if [ ! `which rustup` ]; then
    rustupInstaller
  fi

  cargo install git-journal

}
