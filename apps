function homesteadInstaller {

  if [ ! `which vagrant` ]; then
    vagrantInstaller
  fi

  vagrant box add laravel/homestead

  cd ~
  git clone https://github.com/laravel/homestead.git Homestead

  cd ~/Homestead/
  bash init.sh

}

