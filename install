    55) steamInstaller               ;;
    56) phpStormInstaller            ;;
    57) dataGripInstaller            ;;
    58) ideaUltimateInstaller        ;;
    59) pyCharmProfessionalInstaller ;;
    60) pyCharmCommunityInstaller    ;;
    61) pyCharmEduInstaller          ;;
