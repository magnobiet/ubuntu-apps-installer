  16 "Composer"                                                                                                                      off
  17 "MySQL"                                                                                                                         off
  18 "MySQL Workbench"                                                                                                               off
  19 "PostgreSQL"                                                                                                                    off
  20 "pgAdmin"                                                                                                                       off
  21 "MongoDB"                                                                                                                       off
  22 "MongoChef"                                                                                                                     off
  23 "Sublime Text"                                                                                                                  off
  24 "DropBox"                                                                                                                       off
  25 "ownCloud"                                                                                                                      off
  26 "Mega"                                                                                                                          off
  27 "Google Chrome"                                                                                                                 off
  28 "TimeShift"                                                                                                                     off
  29 "ScreenCloud"                                                                                                                   off
  30 "KeePass X"                                                                                                                     off
  31 "Reset MS Mice (Fixes Abnormal Scroll Wheel Problems with Certain Microsoft Mice)"                                              off
  32 "Ajenti"                                                                                                                        off
  33 "Webmin"                                                                                                                        off
  34 "Spotify"                                                                                                                       off
  35 "uGet Download Manager"                                                                                                         off
  36 "MS and OSX fonts"                                                                                                              off
  37 "Diff tools (Diffuse, Meld)"                                                                                                    off
  38 "VirtualBox"                                                                                                                    off
  39 "Vagrant (Requires VirtualBox)"                                                                                                 off
  40 "Homestead (Requires Vagrant)"                                                                                                  off
  41 "Java"                                                                                                                          off
  42 "Apache Maven"                                                                                                                  off
  43 "NetBeans"                                                                                                                      off
  44 "Android Studio"                                                                                                                off
  44 "Microsoft Visual Studio Code"                                                                                                  off
  45 "TexLive"                                                                                                                       off
  46 "Texmaker"                                                                                                                      off
  48 "Kazam Screencaster"                                                                                                            off
  49 "Skype"                                                                                                                         off
  50 "Viber"                                                                                                                         off
  51 "Nylas N1"                                                                                                                      off
  52 "Brave"                                                                                                                         off
  53 "Yandex Disk"                                                                                                                   off
  54 "Yumi"                                                                                                                          off
  55 "Steam"                                                                                                                         off
  56 "PHP Storm"                                                                                                                     off
  57 "DataGrip"                                                                                                                      off
  58 "Idea UI"                                                                                                                       off
  59 "PyCharm Community"                                                                                                             off
  60 "PyCharm Professional"                                                                                                          off
  61 "PyCharm Edu"                                                                                                                   off
  62 "Ruby Mine"                                                                                                                     off
  63 "CLIon"                                                                                                                         off
  64 "WebStorm"                                                                                                                      off
  65 "Open365"                                                                                                                       off
  66 "MEO Cloud"                                                                                                                     off
  67 "Genymotion"                                                                                                                    off
  68 "ZSH"                                                                                                                           off
  69 "TeamViewer"                                                                                                                    off
  70 "System Update"                                                                                                                 on
  71 "Restart after install"                                                                                                         off
)

choices=$("${cmd[@]}" "${options[@]}" 2>&1 >/dev/tty)

clear

apt-get update

for choice in $choices; do

  case $choice in

    01) utilsInstaller               ;;
    02) restrictedExtrasInstaller    ;;
    03) topInstaller                 ;;
    04) unityTweakInstaller          ;;
    05) nodeJSInstaller              ;;
    06) fixNpmGlobal                 ;;
    07) nvmInstaller                 ;;
    08) nodeJSPackagesInstaller      ;;
    09) pythonInstaller              ;;
    10) theFuckInstaller             ;;
    11) rubyInstaller                ;;
